<%# 営業時間検索用パーシャル　%>
<fieldset class="border rounded-lg p-4" data-controller="zipcode open-hour-search time-input">
  <legend class="px-2 text-sm font-bold text-gray-700">営業時間情報検索</legend>
  <%# 営業開始時刻・終了時刻の直接入力 %>
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <div>
      <%= f.label :open_time, t('activerecord.attributes.onsen.open_time'),
                   class: "block text-sm font-bold mb-1" %>
      <div class="flex gap-2">
        <%= f.number_field :open_time,
                            value: params[:open_time],
                            step: "any",
                            class: "flex-1 border rounded px-3 py-2",
                            placeholder: "例: 1700",
                            'aria-label': t('activerecord.attributes.onsen.open_time'),
                            data: { open_hour_target: "open_time", time_input_target: "input" } %>
        <button type="button"
                class="px-3 py-2 bg-gray-200 rounded hover:bg-blue-100 text-sm whitespace-nowrap focus:ring-2 focus:ring-blue-500 flex-shrink-0"
                aria-label="現在時刻を入力"
                data-action="click->time-input#fillCurrentTime">
          現在時刻
        </button>
      </div>
      <p class="text-xs text-gray-600 mt-1">半角数字のみで入力してください</p>
    </div>
    <div>
      <%= f.label :close_time, t('activerecord.attributes.onsen.close_time'),
                   class: "block text-sm font-bold mb-1" %>
      <%= f.number_field :close_time,
                          value: params[:close_time],
                          step: "any",
                          class: "w-full border rounded px-3 py-2",
                          placeholder: "例: 2300",
                          'aria-label': t('activerecord.attributes.onsen.close_time'),
                          data: { open_hour_target: "close_time" } %>
      <p class="text-xs text-gray-600 mt-1">半角数字のみで入力してください</p>
    </div>
  </div>
</fieldset>
