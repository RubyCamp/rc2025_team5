<%# ジャンル別検索用パーシャル %>
<fieldset class="border rounded-lg p-4">
  <legend class="px-2 text-sm font-bold text-gray-700">ジャンル分け検索</legend>

  <%# 選択肢の配列を定義 %>
  <% category_options = [
       ["イベント", "event"], 
       ["温泉", "onsen"], 
       ["夜景", "night_spot"], 
       ["飲食店", "restaurant"]
     ] %>

  <%= f.select :category, 
               options_for_select(category_options, params[:category]),
               { prompt: "カテゴリを選択してください" },
               { class: "w-full border rounded px-3 py-2" } %>
</fieldset>
